# /home/orin/study/llm/nano_llm/.devcontainer/Dockerfile
# FROM dustynv/nano_llm:r36.4.0
FROM my_container:nano_llm_ros
ENV http_proxy=http://192.168.0.51:12346
ENV https_proxy=http://192.168.0.51:12346
ENV HF_ENDPOINT=https://hf-mirror.com
ENV HUGGINGFACE_TOKEN=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

ARG USERNAME=admin
ARG USER_UID=1000
ARG USER_GID=$USER_UID

# Create the user and group properly before any operations
RUN groupadd --gid $USER_GID $USERNAME 2>/dev/null || true && \
    useradd --uid $USER_UID --gid $USER_GID -m -s /bin/bash $USERNAME 2>/dev/null || true && \
    usermod -aG sudo $USERNAME 2>/dev/null || true && \
    usermod -aG video $USERNAME 2>/dev/null || true && \
    echo "$USERNAME ALL=(root) NOPASSWD:ALL" > /etc/sudoers.d/$USERNAME 2>/dev/null || true && \
    chmod 0440 /etc/sudoers.d/$USERNAME 2>/dev/null || true

RUN apt-get update && \
    apt-get install -y sudo && \
    echo "$USERNAME ALL=(root) NOPASSWD:ALL" > /etc/sudoers.d/$USERNAME && \
    chmod 0440 /etc/sudoers.d/$USERNAME

# Update all packages
RUN apt update && apt upgrade -y

# Install Git and other required packages
RUN apt install -y git portaudio19-dev usbutils alsa-utils

# Add user to video group to allow access to webcam
RUN usermod --append --groups video $USERNAME 2>/dev/null || true

# Switch to user
USER $USERNAME

